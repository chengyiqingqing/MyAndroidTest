<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.meitu.sww.testcustomview.customview.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="你好呀"
        app:textColor="#ff00ff"
        app:textSize="15sp"
        app:textButtonLeft="返回"
        app:leftBackground="@mipmap/ic_launcher"
        app:leftButtonSize="12sp"
        app:textButtonRight="完成"
        app:rightBackground="@mipmap/ic_launcher"
        app:rightButtonSize="12sp"
        >

    </com.meitu.sww.testcustomview.customview.TopBar>

</RelativeLayout>